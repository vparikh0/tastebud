<div class="container">

  <div class="col-md-8 col-md-offset-2 page-header jumbotron">

    <h2>
      <%= @user.username.upcase %>'s reviews
    </h2>

    <a href="/restaurants" class="btn btn-lg btn-success">Add a Review for a Restaurant</a>
  </div>


  <div class="row">
    <div class="col-md-12">

      <table class="table table-striped table-hover">
        <tr>
          <th>Review ID #</th>
          <th>Date Visited</th>
          <th>Restaurant Name</th>
          <th>Neighborhood</th>
          <th>Address</th>
          <th>Notes</th>
          <th></th>
        </tr>

        <% @user.reviews.each do |review| %>
        <tr>
          <td> # <%= review.id %></td>
          <td><%= review.date %></td>
          <td><%= review.restaurant.name %> </td>
          <td><%= review.restaurant.neighborhood %></td>
          <td><%= review.restaurant.address %></td>
          <td><%= truncate(review.notes) %></td>
          <td>
            <a href="/reviews/<%= review.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus" aria-hidden="true"></i>
            </a>
            <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </a>
            <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
        <% end %>
      </table>

      <!-- <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/search?q=<%# review.restaurant.name %>,<%# review.restaurant.neighborhood %>&key=AIzaSyBOcjx2-pkCnJam_fhWonH9uWmeMr-bM20" allowfullscreen> -->
      <!-- </iframe> -->

    </div>
  </div>
</div>
