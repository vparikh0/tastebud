<div class="page-header">

  <!-- Add a Tastebud image -->

  <div class="panel panel-default">
    <div class="panel-heading">
      <% random_review = Review.all.sample %>
      <h1 class="panel-title"> Our customer's Restaurant Reviews: 
      </h1>

      <div class="panel-body">
        <p>
          <%= Restaurant.find_by(:id => random_review.restaurant_id).name %> - <%= random_review.notes %>
        </p>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= search_form_for @q do |f| %>
    <h1 class="title">
      Search Database
      <span class="col-md-offset-1">Or</span>
      <span class="col-md-offset-1">
        <a href="/restaurants/new_search" class="btn btn-info">
          <h4>
            Add New Restaurant
          </h4>
        </a>
      </span>
    </h1>

    <div class="form-group">
      <%= f.label :name_cont, "Restaurant Name" %>
      <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Restaurant name" %>
    </div>

    <div class="form-group">
      <%= f.label :address_cont, "Restaurant Address" %>
      <%= f.text_field :address_cont, :class => "form-control", :placeholder => "Restaurant address" %>
    </div>

    <div class="form-group">
      <%= f.label :neighborhood_cont, "Restaurant Neighborhood" %>
      <%= f.text_field :neighborhood_cont, :class => "form-control", :placeholder => "Restaurant neighborhood" %>
    </div>

    <%= f.submit :class => "btn btn-primary btn-block" %>

    <a href="/restaurants" class="btn btn-block">Clear filters</a>
    <% end %>

  </div>
</div>

<div class="title">
  <h1>
    Restaurants
  </h1>
</div>

<div class="row">
  <div class="col-md-10">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Neighborhood</th>
        <th>See Restaurant</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.neighborhood %></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus" aria-hidden="true"></i>
          </a>
          <!-- <a href="/restaurants/<%# restaurant.id %>/edit" class="btn btn-warning"> -->
          <!-- <i class="fa fa-pencil-square-o" aria-hidden="true"></i> -->
        </a>
        <!-- <a href="/delete_restaurant/<%# restaurant.id %>" class="btn btn-danger" rel="nofollow"> -->
        <!-- <i class="fa fa-trash-o" aria-hidden="true"></i> -->
      </a>
    </td>
  </tr>

  <% end %>
</table>
</div>

</div>
