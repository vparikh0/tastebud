<div class="page-header">
  <!-- Add a Tastebud image -->
  <h1>
    Search Restaurants
  </h1>
</div>

<div class="form-group">
  <%# if :name == Restaurant.find_by(:name) %>
  <!-- Find this restaurant by the :id -->
  <!-- <form class="" action="/restaurants/<%= :id %>"> -->
  <!-- </form> -->
    <!-- <% else %> -->

  <form class="" action="/restaurants/new">
  <%# end %>

      <input type="text" name="name" placeholder="Restaurant Name or Address" class="form-control">
    </form>



  </div>

  <!-- Google Map below -->

  <div class="page-header">
    <h1>
      Restaurants
      <a href="/restaurants/new" class="btn btn-lg btn-success">New Restaurant</a>
    </h1>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Neighborhood</th>
          <th>Actions</th>
        </tr>

        <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.neighborhood %></td>
          <td>
            <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Show</a>
            <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
