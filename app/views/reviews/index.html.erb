<div class="page-header">
  <h1>
    Reviews
    <a href="/restaurants" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User Email</th>
        <th>Restaurant Name</th>
        <th>Notes</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user.email %></td>
        <td><%= review.restaurant.name %></td>
        <td><%= truncate(review.notes) %></td>
        <% if current_user.id != review.user_id %>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus" aria-hidden="true"></i>
          </a>
        </td>
        <% else %>
          <td>
            <a href="/reviews/<%= review.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus" aria-hidden="true"></i>
          </a>
          <a href="/reviews/<%= review.id %>/edit" class="btn btn-warning">
            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          </a>
          <a href="/delete_review/<%= review.id %>" class="btn btn-danger" rel="nofollow">
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          </a>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
